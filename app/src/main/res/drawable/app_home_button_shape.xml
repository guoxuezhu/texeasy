<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 边框的颜色及形状 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#70d7e0" />
            <corners
                android:bottomLeftRadius="@dimen/dp_100"
                android:bottomRightRadius="@dimen/dp_100"
                android:topLeftRadius="@dimen/dp_100"
                android:topRightRadius="@dimen/dp_100" />
        </shape>
    </item>
    <!--  背景的颜色及形状  -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#70d7e0" />
            <corners
                android:bottomLeftRadius="@dimen/dp_100"
                android:bottomRightRadius="@dimen/dp_100"
                android:topLeftRadius="@dimen/dp_100"
                android:topRightRadius="@dimen/dp_100" />
        </shape>
    </item>


</layer-list>