<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_home_center_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/base_home_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EasyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/base_default_text_hint</item>
        <item name="helperTextTextColor">@color/base_default_text_hint</item>
        <item name="boxStrokeColor">@color/base_default_text</item>
        <item name="hintTextColor">@color/base_default_text_hint</item>
    </style>

    <style name="EasyTextInputEditTextStyle">
        <item name="android:textColorHint">#aaaaaa</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/base_default_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">30</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:digits">
            1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM,.?!@#_
        </item>
    </style>

    <style name="BaseInspectTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/common_borderLineColor</item>
        <item name="android:textColor">@color/base_default_text_hint</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="BaseInspectItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_59</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/dp_34</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/base_default_text</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="BaseSettingItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_33</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#5d6877</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="BaseSettingItemEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginRight">@dimen/dp_22</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#5d6877</item>
        <item name="android:textColorHint">#5d6877</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:digits">
            1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM,.?!@#_
        </item>
        <item name="android:hint">@string/base_basic_setting_input_hint</item>
        <item name="android:background">@drawable/base_bg_edit_text_shape</item>
    </style>

    <style name="BaseBorderLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_34</item>
        <item name="android:layout_marginRight">@dimen/dp_34</item>
        <item name="android:background">@color/common_borderLineColor</item>
    </style>

    <style name="BasicSettingTextInputLayoutStyle" parent="EasyTextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>


    </style>

    <style name="BasicSettingTextInputEditTextStyle" parent="EasyTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/base_default_text</item>
        <item name="android:textColorHint">@color/base_default_text_hint</item>
    </style>

    <style name="BaseInspectItemBeatStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_13</item>
        <item name="android:background">@drawable/base_round_stroke_10dp_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseRfidSettingTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/base_title_main</item>
    </style>

    <style name="BaseRfidSettingEditTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/base_round_stroke_10dp_shape</item>
        <item name="android:textColor">@color/textColorSecond</item>
        <item name="android:textSize">@dimen/base_title_secondary</item>
    </style>
</resources>